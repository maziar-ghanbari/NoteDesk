<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:src="@drawable/ic_twotone_star_24"
    android:background="#00FFFFFF">

    <ImageView
        android:id="@+id/priority_spinner_img"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/ic_twotone_star_24"
        android:background="#00FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/priority_spinner_txt"/>

    <TextView
        android:id="@+id/priority_spinner_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/priorities_menu"
        app:layout_constraintTop_toBottomOf="@id/priority_spinner_img"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/white"/>
</androidx.constraintlayout.widget.ConstraintLayout>